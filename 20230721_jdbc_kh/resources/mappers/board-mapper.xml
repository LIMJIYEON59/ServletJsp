<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="boardMapper1">
<resultMap type="BoardDto" id="BoardResultMap1">
	<id property="bno" column="BNO"/>	<!-- pk는 id이다. -->
	<result property="bcontent" column="bcontent"/>
	<result property="btitle" column="btitle"/>
	<result property="bwriteDate" column="bwriteDate"/>
	<result property="bref" column="bref"/>
	<collection property="attachFileList">	<!-- join하면 필요함 (collection)  -->
		 <result property="filepath" column="FILE_PATH"/>
	</collection>
</resultMap>
	<select id="selectAttachFile" resultType="AttachFileDto">
	select * from Attach_File
	</select>
	<select id="selectList" resultType="BoardResultMap1" parameterType="_int">
	select BNO, BTITLE, bcontent, to_char(BWRITE_DATE, 'yyyy-mm-dd hh24:mi:ss') 
	BWRITE_DATE, MID, BREF, BRE_LEVEL, BRE_STEP from BOARD
	where BNO=#{bno}
	</select>
	<insert id="insert" parameterType="map"> <!-- 소문자이다 --><!-- 매개인자 자료형이 두 개라면 Map형태로 가져온다.  -->
	insert into BOARD values (#{},#{},#{}, default, #{},#{}, 0,0)
	</insert>
</mapper>
